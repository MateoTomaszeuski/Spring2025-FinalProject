<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.PopUps.LoggedInPopUp"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">
    <VerticalStackLayout>
        <Border
            BackgroundColor="{AppThemeBinding Dark={StaticResource Dark-Dark}, Light={StaticResource Light-Light}}"
            StrokeThickness="0"
            Padding="15">
            <VerticalStackLayout>
                <Label 
                    Text="Welcome to Consilium!&#10;"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="Check your email to validate your account."
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
                <Label 
                    Text="If you can't see the email, check your spam folder."
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</toolkit:Popup>