<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Views.AssignmentsView"
             Title="AssignmentsView"
             xmlns:vm="clr-namespace:Consilium.Shared.ViewModels;assembly=Consilium.Shared">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Assignments" 
                   FontSize="27" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20" />
            <Button Text="Create New Course"
                    Command="{Binding ToggleCourseFormCommand}"
                    Margin="10,0"/>

            <StackLayout IsVisible="{Binding ShowCourseForm}" Padding="10">
                <Entry Placeholder="Course Name"
                       Text="{Binding NewCourseName}" />

                <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="10">
                    <Button Text="Cancel" Command="{Binding ToggleCourseFormCommand}" />
                    <Button Text="Save" Command="{Binding AddCourseCommand}" />
                </StackLayout>
            </StackLayout>
            <Picker Title="Select a course"
                    ItemsSource="{Binding Courses}"
                    ItemDisplayBinding="{Binding CourseName}"
                    SelectedItem="{Binding SelectedCourse}"
                    Margin="10"
                    WidthRequest="160"
                    IsVisible="{Binding ShowCourseForm, Converter={StaticResource InverseBoolConverter}}"/>

            <Button Text="Create New Assignment"
                    MaximumWidthRequest="450"
                    Margin="15"
                    Command="{Binding ToggleAssignmentFormCommand}"/>

            <Border
                 Padding="20"
                 BackgroundColor="{AppThemeBinding Dark={StaticResource Dark-Dark}, Light={StaticResource Light-Light}}"
                 StrokeShape="RoundRectangle 10"
                 StrokeThickness="0"
                 IsVisible="{Binding ShowAssignmentForm}">
                
                <StackLayout Spacing="10">
                    <Label Text="New Assignment" FontAttributes="Bold" FontSize="18" />

                    <Entry Placeholder="Title"
                       Text="{Binding NewAssignmentTitle}" />

                    <Editor Placeholder="Description"
                        Text="{Binding NewAssignmentDescription}" />

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="Due: "
                               VerticalOptions="Center"/>
                        <DatePicker Date="{Binding NewAssignmentDueDate}" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="10">
                        <Button Text="Cancel"
                            Command="{Binding ToggleAssignmentFormCommand}" />
                        <Button Text="Save"
                            Command="{Binding AddAssignmentCommand}" />
                    </StackLayout>
                </StackLayout>
            </Border>

            <Border StrokeShape="RoundRectangle 10"
                    Padding="10"
                    Margin="0,20,0,0"
                    BackgroundColor="Transparent"
                    StrokeThickness="0">
                <CollectionView ItemsSource="{Binding Assignments}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="5" BackgroundColor="Transparent">
                                <Border StrokeShape="RoundRectangle 10"
                                        Padding="15"
                                        StrokeThickness="0"
                                        BackgroundColor="{AppThemeBinding Dark={StaticResource Dark-Dark}, Light={StaticResource Light-Light}}">

                                    <StackLayout>
                                        <Grid ColumnDefinitions="Auto, *, Auto"
                                              VerticalOptions="Center"
                                              Margin="0,0,0,10">
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsCompleted}"
                                                      VerticalOptions="Center"
                                                      Margin="0,0,10,0"/>

                                            <Label Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   TextColor="{AppThemeBinding Dark=White, Light=Black}"
                                                   FontAttributes="Bold"
                                                   FontSize="17"
                                                   LineBreakMode="TailTruncation"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="StartAndExpand"/>

                                            <Label Grid.Column="2"
                                                   Text="{Binding DueDate, StringFormat='{0:MMM d}'}"
                                                   FontSize="14"
                                                   Opacity="0.6"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="End"
                                                   TextColor="{AppThemeBinding Dark=White, Light=Black}"
                                                   Margin="10,0,0,0"/>
                                        </Grid>

                                        <!-- button will say "see details" or "see less"-->
                                        <StackLayout Spacing="0">
                                            <Button Text="{Binding DescriptionIsExpanded, Converter={StaticResource SeeMoreSeeLessConverter}}"
                                                    Command="{Binding ToggleDescriptionCommand}"
                                                    CommandParameter="{Binding .}"
                                                    HorizontalOptions="Start"
                                                    Margin="40,0,0,0"
                                                    TextColor="{AppThemeBinding Dark=White, Light=Black}"
                                                    BackgroundColor="Transparent"
                                                    IsVisible="{Binding HasDescription}"/>

                                            <!-- full description (visible when expanded) -->
                                            <Label Text="{Binding Description}"
                                                   IsVisible="{Binding DescriptionIsExpanded}"
                                                   TextColor="{AppThemeBinding Dark=White, Light=Black}"
                                                   Padding="10"/>
                                        </StackLayout>

                                        <StackLayout Orientation="Horizontal"
                                                     HorizontalOptions="End"
                                                     Spacing="5"
                                                     Margin="0,5,0,0">
                                            <Button Text="Start"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AssignmentsViewModel}}, Path=StartAssignmentCommand}"/>
                                            <Button Text="Add To-Do" />
                                            <Button Text="{StaticResource TrashIcon}"
                                                    FontFamily="FontAwesomeSolid"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="#7a2b35"
                                                    TextColor="White" />
                                        </StackLayout>
                                    </StackLayout>
                                </Border>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>
