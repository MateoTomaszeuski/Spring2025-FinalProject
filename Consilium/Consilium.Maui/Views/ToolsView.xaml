<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Views.ToolsView"
             xmlns:tools="clr-namespace:Consilium.Maui.Controls"
             Title="ToolsView">

    <VerticalStackLayout>
        <ScrollView>
            <HorizontalStackLayout>
                <Button
                    Text="Notes"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Notes"/>

                <Button
                    Text="Calculator"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Calculator"/>

                <Button
                    Text="Pomodoro"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Pomodoro"/>
            </HorizontalStackLayout>
        </ScrollView>

        <tools:CalculatorView x:Name="Calculator" IsVisible="False">
            <tools:CalculatorView.Triggers>
                
                <DataTrigger TargetType="tools:CalculatorView"
                             Binding="{Binding ActiveTool}"
                             Value="Calculator">
                    <Setter Property="IsVisible" Value="True"/>
                </DataTrigger>

                <DataTrigger TargetType="tools:CalculatorView"
                             Binding="{Binding ActiveTool}"
                             Value="Notes">
                    <Setter Property="IsVisible" Value="False"/>
                </DataTrigger>

                <DataTrigger TargetType="tools:CalculatorView"
                             Binding="{Binding ActiveTool}"
                             Value="Pomodoro">
                    <Setter Property="IsVisible" Value="False"/>
                </DataTrigger>
            </tools:CalculatorView.Triggers>
        </tools:CalculatorView>

    </VerticalStackLayout>
</ContentPage>