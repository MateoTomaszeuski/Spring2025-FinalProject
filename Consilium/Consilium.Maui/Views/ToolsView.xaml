<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Views.ToolsView"
             xmlns:tools="clr-namespace:Consilium.Maui.Controls"
             Title="ToolsView">

    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentView"
                Binding="{Binding ActiveTool}"
                Value="calculator">
            <Setter Property="IsVisible"
                    Value="True"/>
        </DataTrigger>
    </ContentPage.Triggers>

    <VerticalStackLayout>
        <ScrollView>
            <HorizontalStackLayout>
                <Button
                    Text="Notes"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Notes"/>

                <Button
                    Text="Calculator"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Calculator"/>

                <Button
                    Text="Pomodoro"
                    Command="{Binding ChangeToolCommand}"
                    CommandParameter="Pomodoro"/>
            </HorizontalStackLayout>
        </ScrollView>
        <tools:CalculatorTool x:Name="Calculator" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>