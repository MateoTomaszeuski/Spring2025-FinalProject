<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Views.MessagesView"
             Title="MessagesView">
    <VerticalStackLayout>
        <Label Text="{Binding ConversationWith}"/>
        <ScrollView>
            <StackLayout>
                <CollectionView ItemsSource="{Binding AllMessages}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label Text="{Binding Content}"/>
                                <Label Text="{Binding TimeSent}"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
        <Entry Text="{Binding MessageContent}"
                Placeholder="Type your message here"/>
        <Button Text="Send"
                Command="{Binding SendMessageCommand}"/>
    </VerticalStackLayout>
</ContentPage>