<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Views.ProfileView"
             Title="ProfileView">
    <VerticalStackLayout>
        <Label Text="You feel like being more fancy? Do you need to have an account? well you are in the right place dummy"/>
        <Label 
            Text="Email:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding EmailInput}"/>
        <Button Text="Log In" Command="{Binding LogInCommand}" Clicked="Button_Clicked"/>
        <Label 
            Text="{Binding Token}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>