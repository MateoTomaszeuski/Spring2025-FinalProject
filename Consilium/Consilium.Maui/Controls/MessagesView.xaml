<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Controls.MessagesView">

    <Grid RowDefinitions="Auto,*,Auto"
          MaximumWidthRequest="600"
          Padding="10">

        <Label Grid.Row="0"
               Text="{Binding ConversationWith}"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,25"/>

        <CollectionView x:Name="MessagesCollectionView" Grid.Row="1"
                        ItemsSource="{Binding AllMessages}"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*" Padding="10">

                        <!--messages from them-->
                        <Border Grid.Column="0"
                                BackgroundColor="#9ebaab"
                                StrokeShape="RoundRectangle 18"
                                StrokeThickness="0"
                                Padding="12"
                                MaximumWidthRequest="260"
                                HorizontalOptions="Start"
                                IsVisible="{Binding IsMyMessage, Converter={StaticResource InverseBoolConverter}}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Content}" FontSize="15" TextColor="Black" />
                                <Label Text="{Binding TimeSent, StringFormat='{0:t}'}"
                                       FontSize="11" Opacity="0.7"
                                       HorizontalOptions="End"
                                       TextColor="{StaticResource Dark-Dark}" />
                            </VerticalStackLayout>
                        </Border>

                        <!--messages sent from me-->
                        <Border Grid.Column="1"
                                BackgroundColor="{StaticResource Dark-Green}"
                                StrokeShape="RoundRectangle 15"
                                StrokeThickness="0"
                                Padding="10"
                                MaximumWidthRequest="260"
                                HorizontalOptions="End"
                                IsVisible="{Binding IsMyMessage}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Content}" FontSize="15" TextColor="White" />
                                <Label Text="{Binding TimeSent, StringFormat='{0:t}'}"
                                       FontSize="11" TextColor="White"
                                       Opacity="0.6" HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--input and send button-->
        <ContentView Grid.Row="2"
                     IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowChat}">
            <Grid ColumnDefinitions="*,Auto"
                    Margin="0,10,0,0">
                <Entry Text="{Binding MessageContent}"
                       Completed="MessageContent_Completed"
                       Placeholder="Type your message here"
                       Grid.Column="0"
                       HeightRequest="40"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"
                       Margin="0,0,10,0" />
                <Button Text="{StaticResource UpArrowIcon}"
                        FontFamily="FontAwesomeSolid"
                        Command="{Binding SendMessageCommand}"
                        Grid.Column="1"
                        BackgroundColor="{StaticResource Mid-Green}"
                        TextColor="White"
                        CornerRadius="10"/>
            </Grid>
        </ContentView>
    </Grid>
</ContentView>
