<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Consilium.Maui.Controls.MessagesView">

    <VerticalStackLayout>

        <Label Text="{Binding ConversationWith}"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10"/>

        <CollectionView ItemsSource="{Binding AllMessages}"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*" Padding="10">

                        <!-- their messages go on the left -->
                        <Border Grid.Column="0"
                BackgroundColor="#e0e0e0"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="0"
                Padding="10"
                MaximumWidthRequest="260"
                HorizontalOptions="Start"
                IsVisible="{Binding IsMyMessage, Converter={StaticResource InverseBoolConverter}}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Content}"
                       FontSize="15"
                       TextColor="Black" />
                                <Label Text="{Binding TimeSent, StringFormat='{0:t}'}"
                       FontSize="11"
                       Opacity="0.6"
                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                        <!--my messages-->
                        <Border Grid.Column="1"
                BackgroundColor="#007AFF"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="0"
                Padding="10"
                MaximumWidthRequest="260"
                HorizontalOptions="End"
                IsVisible="{Binding IsMyMessage}">
                            <VerticalStackLayout>
                                <Label Text="{Binding Content}"
                       FontSize="15"
                       TextColor="White" />
                                <Label Text="{Binding TimeSent, StringFormat='{0:t}'}"
                       FontSize="11"
                       TextColor="White"
                       Opacity="0.6"
                       HorizontalOptions="End" />
                            </VerticalStackLayout>
                        </Border>

                    </Grid>
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Padding="10"
              ColumnDefinitions="*,Auto"
              Margin="0,10,0,0">
            <Entry Text="{Binding MessageContent}"
                   Completed="MessageContent_Completed"
                   Placeholder="Type your message here"
                   Grid.Column="0"
                   HeightRequest="40"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   Margin="0,0,10,0" />
            <Button Text="Send"
                    Command="{Binding SendMessageCommand}"
                    Grid.Column="1"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
