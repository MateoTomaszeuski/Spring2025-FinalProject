<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             x:Class="Consilium.Maui.Controls.Calendar">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                <Button Text="◀" Clicked="OnPrevMonthClicked" />
                <Label x:Name="MonthYearLabel" FontAttributes="Bold" FontSize="20" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" />
                <Button Text="▶" Clicked="OnNextMonthClicked" />
            </StackLayout>
            <Grid x:Name="CalendarGrid"
                  RowSpacing="5"
                  ColumnSpacing="5"
                  Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
